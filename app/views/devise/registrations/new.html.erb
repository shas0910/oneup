<h2>Sign up</h2>

<%= form_with model: @user, url: user_registration_path, class: "registration-main", local: true do |f| %>
  <div class='form-wrap'>
    <h1 class='from-title'>
      forms
    </h1>

    <%= render 'shared/error_messages', model: f.object %>

    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :email, class:"input-default", id:"email", placeholder:"", maxlength:"40" %>
    </div>
    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
    </div>
    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">パスワード(確認)</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"" %>
    </div>
    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">ユーザーネーム</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :user_name, class:"input-default", id:"user-name", placeholder:"", maxlength: "40" %>
    </div>
    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">自己紹介</label>
      </div>
      <%= f.text_area :user_desc, class:"input-default", id:"user-desc", placeholder:"", maxlength: "1000" %>
    </div>
    <div class='register-btn'>
      <%= f.submit "会員登録" ,class:"register-red-btn" %>
    </div>
  </div>
<% end %>